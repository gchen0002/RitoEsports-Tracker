  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2015"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "*.zip"]
} 